@model QLLaCoffee.Models.ShiftReports

<p style="font-size: 40px; font-weight: bold; text-align:center">Báo cáo kết ca</p>
<p style="font-size: 20px; text-align: center">LÁ COFFEE</p>
@{
    var user = QLLaCoffee.App_Start.SessionConfig.GetUser();
}
<p style="text-align: center">Nhân viên: @user.FullName</p>
<div style="display: flex; justify-content: center">
    <div style="width:50%">
        <div style="display: flex; justify-content: space-around;">
            <p>Giờ vào ca: @Model.FirstTime.ToString("g")</p>
            <p>Giờ kết ca: @Model.LastTime.ToString("g")</p>
        </div>
        <div style="display: flex; justify-content: center">
            <div style="width: fit-content;">
                <p>Tống số hóa đơn: @Model.BillCount</p>
                <p>Đang phục vụ: @Model.UncollectedAmount.ToString("C0")</p>
                <p>Doanh thu: @Model.Revenue.ToString("C0")</p>
                <p>Số tiền đầu ca: @Model.FirstAmount.ToString("C0")</p>
                <p>Số tiền kết ca: @Model.LastAmount.ToString("C0")</p>
            </div>
        </div>        
        <div style="display: flex; justify-content: space-around;">
            <p>Nhân viên giao ca</p>
            <p>Nhân viên nhận ca</p>
        </div>
    </div>
</div>



